{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es5",
    "allowJs": true,
    "esModuleInterop" : true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": ["typings.d.ts", "subPackages/**/*/*.d.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}
